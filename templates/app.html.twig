{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-md d-flex justify-content-center">
        <div id="contact_card" class="card" style="width: 100%; max-width: 460px; margin-top: 100px">
            <div class="card-body">
                <div class="d-flex justify-content-center">
                    <h5 class="card-title">Contact</h5>
                </div>

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('failed') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_start(form_contact, { 'attr': {'class': 'bootstrap-5-form'} }) }}
                    {{ form_widget(form_contact) }}
                {{ form_end(form_contact) }}

            </div>
        </div>
    </div>

    <script>
        setTimeout(()=>{
            $contactCard = document.getElementById("contact_card");
            alerts = $contactCard.getElementsByClassName('alert');
            Object.values(alerts).forEach($alert => {
                $alert.remove();
            });
        }, 5000);
    </script>

{% endblock %}